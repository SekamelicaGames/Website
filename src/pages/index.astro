---
// Component Imports
import MainHead from '../components/MainHead.astro';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import PortfolioPreview from '../components/PortfolioPreview.astro';
import type { Project } from '../types';

// Data Fetching: List all Markdown posts in the repo.
const projects = (await Astro.glob<Project>('./project/**/*.md'))
	.filter(({ frontmatter }) => !!frontmatter.orderId)
	.sort(
		(a, b) =>
		a.frontmatter.orderId - b.frontmatter.orderId
	);
const featuredProject = projects[0]!;

// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/
---

<html lang="fr" >
	<head>
		<MainHead
			title="Sekamelica Games"
			description="Alice Pinto : Développeuse indépendante - Artiste-auteure"
		/>
		<style>
			.hero {
				position: relative;
				overflow: hidden;
			}

			@media (min-width: 750px) {
				.hero {
					height: 45vw;
				}
			}

			.img {
				display: block;
				width: 100%;
				height: auto;
			}

			.gradient,
			.gradient2 {
				background-image: url('/assets/mesh-gradient.jpg');
				background-size: cover;
				pointer-events: none;
				mix-blend-mode: screen;
				width: 100%;
				height: 100%;
				position: absolute;
				top: 0;
				left: 0;
				z-index: 2;
			}

			.gradient2 {
				mix-blend-mode: multiply;
				background-size: cover;
			}

			.overlay {
				position: absolute;
				top: 0;
				left: 0;
				width: 100%;
				height: 100%;
				z-index: 10;
				display: flex;
				flex-direction: column;
				align-items: flex-start;
				justify-content: center;
				padding-left: 2rem;
			}

			@media (min-width: 750px) {
				.overlay {
					padding-left: 4rem;
				}
			}

			.grid {
				display: grid;
				grid-gap: 2rem;
			}

			@media (min-width: 1200px) {
				.grid {
					grid-template-columns: 1.5fr 2fr;
				}
			}

			.sectionTitle {
				font-weight: 700;
				font-size: var(--f-u8);
				margin-top: 2rem;
				text-transform: uppercase;
			}

			.rolename
			{
				font-weight: 600;
				font-size: var(--f-u1);
				margin-top: 0rem;
				color: var(--c-sekared);
			}

			.roles {
				display: flex;
				flex-wrap: wrap;
				gap: 0.25em;
				font-size: var(--f-d1);
			}

			.role {
				position: relative;
				display: inline-block;
				white-space: nowrap;
				font-weight: 900;
				color: var(--t-bg);
				background-color: var(--t-fg);
				padding: 0.25em 0.36em;
				z-index: 2;
			}

			@media (min-width: 750px) {
				.role {
					font-size: var(--f-u1);
				}
			}

			.role:nth-of-type(1) .invert {
				background-color: var(--c-yellow);
			}

			.role:nth-of-type(2) .invert {
				background-color: var(--c-pink);
			}

			.role:nth-of-type(3) .invert {
				background-color: var(--c-green);
			}

			.role:hover .invert {
				clip-path: polygon(0% 0%, 100% 0%, 100% 100%, 0% 100%);
			}

			.invert {
				position: absolute;
				color: var(--t-fg);
				display: flex;
				align-items: center;
				justify-content: center;
				width: 100%;
				height: 100%;
				top: 0;
				left: 0;
				pointer-events: none;
				clip-path: polygon(0% 100%, 100% 100%, 100% 200%, 0% 200%);
				transition: clip-path cubic-bezier(0.4, 0, 0.5, 1) 150ms;
			}

			.desc {
				font-size: var(--f-u1);
				margin-top: 1.5rem;
				margin-bottom: 0;
			}

			.bio {
				line-height: 2;
				margin-bottom: 2rem;
			}

			.bio > span:first-of-type {
				line-height: 1;
				margin-bottom: 0.5em;
				display: block;
				font-weight: 700;
				font-size: var(--f-u4);
			}

			.buttonContainer {
				text-align: center;
				margin-top: 2em;
			}

			.projectgrid {
				display: grid;
				grid-gap: 3rem;
				grid-template-rows: auto;
			}

			.majorlistelement 
			{
				font-weight: 600;
			}
		</style>
	</head>
	<body>
		<Nav />
		<!--<header class="hero">
			<img
				width="1600"
				height="1131"
				class="img"
				src="/assets/mesh-gradient.jpg"
				sizes="(max-width: 800px) 800px"
			/>
			<div class="gradient"></div>
			<div class="gradient2"></div>
			<div class="overlay">
				<h1 class="title">
					Alice Pinto <small class="subtitle">Développeuse indépendante - Artiste-auteure</small>
				</h1>
				<!---<div class="roles">
					<span class="role">👩‍💻 Developer <span class="invert">👩‍💻 Developer</span></span>
					<span class="role">🎤 Speaker <span class="invert">🎤 Speaker</span></span>
					<span class="role">✏️ Writer <span class="invert">✏️ Writer</span></span>
				</div>
				<p class="desc">Développeuse polyvalente (Moteur, tech-art, gameplay, tools) et spécialiste Unity (+ de 6 ans d'expérience)</p>
			</div>
		</header> -->
		<main class="wrapper">
			<a class="title">Alice Pinto <a class="subtitle">@Sekamelica</a></a>
			<h3 class="accent">Développeuse indépendante - Artiste-auteure</h3>
			<div class="grid">
				<div class="section">
					<p class="description"> Plus jeune je faisais des jeux RPG Maker et aujourd'hui je développe mon projet rêvé de Metroidvania en tant que développeuse indépendante artiste-auteure.<br><br>
						Je réalise également des prestations de développement sur Unity pour d'autres studios où je partage mon expertise de plus de six ans d'utilisation quotidienne d'Unity, notamment :
						<ul>
							<li class="majorlistelement">Architecture de projet</li>
							<li class="majorlistelement">Programmation gameplay</li>
							<li class="majorlistelement">Programmation ui</li>
							<li class="majorlistelement">Programmation d'outils</li>
							Exemples :
							<ul>
								<li>custom editors d'Unity exploités pour le level design</li>
								<li>gestion des langages</li>
							</ul>
							<li class="majorlistelement">Programmation rendu</li>
							Exemples :
							<ul>
								<li>moteur de rendu 3D</li>
								<li>shaders</li>
								<li>génération procédurale de meshes</li>
							</ul>
							<li class="majorlistelement">Optimisation</li>
							Générale, algorithmique, ui, rendu
							<li class="majorlistelement">Développement mobile (android et iOS)</li>
							Exemples :
							<ul>
								<li>connaissance des stores et des processus de build</li>
								<li>connaissances des outils de data</li>
								<li>UI responsives</li>
								<li>fonctionnalités natives (gyroscope, lampe torche, galerie, ...)</li>
							</ul>
							<li class="majorlistelement">Développement d'expériences en réalité augmentée ou réalité virtuelle</li>
							Mobile (android et iOS), Hololens, Oculus GO.
						</ul>
					</p>
					<br>
					<a href="/projects" class="button">🎮 Projets</a> <a href="/about" class="button">📝 Biographie</a> <a href="/contact" class="button">📧 Contact</a>
				</div>
				<div class="section">
					<div class="projectgrid">
						{projects.map((project) => <div class="projectcard"><PortfolioPreview project={project} /></div>)}
					</div>

					<!-- 
					<h3 class="sectionTitle">Sélection des projets</h3>
					<PortfolioPreview project={featuredProject} />
					<div class="buttonContainer">
						<a href="/projects/" class="button">Voir tout</a>
					</div>-->
				</div>
			</div>
		</main>
		
		<Footer />
	</body>
</html>
